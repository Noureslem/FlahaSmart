<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Dashbord.DashboardAdmController"
            stylesheets="@/css/dashboard-admin.css"
            style="-fx-background-color: #f1f5f9;">

    <!-- Menu latéral gauche -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-pref-width: 280;"
              BorderPane.alignment="TOP_CENTER">

            <!-- Logo et titre -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">
                <StackPane style="-fx-background-color: #27ae60; -fx-background-radius: 12; -fx-padding: 10;">
                    <FontAwesomeIconView glyphName="LEAF" size="24" fill="white"/>
                </StackPane>
                <VBox>
                    <Text text="FlahaSmart" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text text="Administration" style="-fx-font-size: 11px; -fx-fill: #94a3b8;"/>
                </VBox>
            </HBox>

            <Separator style="-fx-background-color: #334155;"/>

            <!-- Profil admin -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0;">
                <StackPane>
                    <Circle radius="45" fill="#27ae60"/>
                    <FontAwesomeIconView glyphName="USER" size="45" fill="white"/>
                </StackPane>
                <Label fx:id="adminNameLabel" text="Administrateur"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label text="Super Admin" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                <HBox spacing="10" alignment="CENTER">
                    <Circle radius="5" fill="#27ae60"/>
                    <Text text="En ligne" style="-fx-fill: #94a3b8; -fx-font-size: 11px;"/>
                </HBox>
            </VBox>

            <Separator style="-fx-background-color: #334155;"/>

            <!-- Menu principal -->
            <VBox spacing="5" style="-fx-padding: 10 0;">

                <Label text="PRINCIPAL" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 10 0 5 0;"/>

                <!-- Tableau de bord -->
                <Button fx:id="dashboardBtn" onAction="#handleDashboard" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="DASHBOARD" size="18" fill="#94a3b8"/>
                            <Text text="Tableau de bord" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Utilisateurs -->
                <Button fx:id="usersBtn" onAction="#handleListUsers" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="USERS" size="18" fill="#94a3b8"/>
                            <Text text="Utilisateurs" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Ajouter Admin -->
                <Button fx:id="addAdminBtn" onAction="#handleAddAdmin" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="USER_PLUS" size="18" fill="#94a3b8"/>
                            <Text text="Ajouter Admin" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Statistiques -->
                <Button fx:id="statsBtn" onAction="#handleStats" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="BAR_CHART" size="18" fill="#94a3b8"/>
                            <Text text="Statistiques" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <Label text="GESTION" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 15 0 5 0;"/>

                <!-- Marketplace -->
                <Button fx:id="marketplaceBtn" onAction="#handleMarketplace" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="SHOPPING_CART" size="18" fill="#94a3b8"/>
                            <Text text="Marketplace" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Forum -->
                <Button fx:id="forumBtn" onAction="#handleForum" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="COMMENTS" size="18" fill="#94a3b8"/>
                            <Text text="Forum" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Produits -->
                <Button fx:id="productsBtn" onAction="#handleProducts" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="TAGS" size="18" fill="#94a3b8"/>
                            <Text text="Produits" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Commandes -->
                <Button fx:id="ordersBtn" onAction="#handleOrders" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="LIST_ALT" size="18" fill="#94a3b8"/>
                            <Text text="Commandes" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>

                <Label text="SYSTÈME" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 15 0 5 0;"/>

                <!-- Paramètres -->
                <Button fx:id="settingsBtn" onAction="#handleSettings" styleClass="menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="COGS" size="18" fill="#94a3b8"/>
                            <Text text="Paramètres" fill="#e2e8f0"/>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Footer avec version et déconnexion -->
            <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                <Separator style="-fx-background-color: #334155;"/>

                <!-- Bouton déconnexion dans le menu -->
                <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-menu-button">
                    <graphic>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <FontAwesomeIconView glyphName="SIGN_OUT" size="18" fill="#ef4444"/>
                            <Text text="Déconnexion" fill="#ef4444" style="-fx-font-weight: bold;"/>
                        </HBox>
                    </graphic>
                </Button>

                <HBox alignment="CENTER" spacing="5">
                    <Text text="Version" style="-fx-fill: #64748b; -fx-font-size: 11px;"/>
                    <Text text="2.0.0" style="-fx-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                </HBox>
                <Text text="© 2024 FlahaSmart" style="-fx-fill: #475569; -fx-font-size: 10px;" textAlignment="CENTER"/>
            </VBox>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="0" style="-fx-background-color: #f8fafc;">

            <!-- Header avec titre de la page et date -->
            <HBox style="-fx-background-color: white; -fx-padding: 20 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);"
                  alignment="CENTER_LEFT">

                <Label fx:id="currentViewLabel" text="Tableau de bord"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <Label fx:id="currentDateLabel" text="" style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
                    <StackPane style="-fx-background-color: #f1f5f9; -fx-background-radius: 20; -fx-padding: 8 15;">
                        <HBox spacing="10" alignment="CENTER">
                            <FontAwesomeIconView glyphName="BELL" size="16" fill="#64748b"/>
                            <Circle radius="4" fill="#ef4444" translateX="-12" translateY="-8"/>
                        </HBox>
                    </StackPane>
                </HBox>
            </HBox>

            <!-- Zone de contenu dynamique -->
            <StackPane fx:id="contentPane" style="-fx-background-color: #f8fafc; -fx-padding: 30;" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

</BorderPane>